{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FORD: Debug Documentation Generation",
            "type": "python",
            "request": "launch",
            "module": "ford",
            "args": ["${workspaceFolder}/${input:projectFile}"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "FORD: Debug with Custom Args",
            "type": "python",
            "request": "launch",
            "module": "ford",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "projectFile",
            "description": "FORD project file",
            "default": "ford-project.md",
            "type": "promptString"
        }
    ]
}