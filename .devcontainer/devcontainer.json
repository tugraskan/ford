{
	"name": "Ford Development Environment",
	"image": "mcr.microsoft.com/devcontainers/base:alpine",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"krvajalm.linter-gfortran",
				"fortran-lang.linter-gfortran"
			],
			"settings": {
				"python.defaultInterpreterPath": "/workspaces/ford/.venv/bin/python",
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": false,
				"python.formatting.provider": "black",
				"editor.formatOnSave": false
			}
		}
	},
	"postCreateCommand": "apk add --no-cache python3 py3-pip git graphviz gfortran build-base && python3 -m venv .venv && . .venv/bin/activate && python -m ensurepip --upgrade || true && python -m pip install --upgrade pip setuptools wheel setuptools-scm && pip install -e .[docs,tests] && if [ -f requirements.txt ]; then pip install -r requirements.txt; fi",
	"postStartCommand": "grep -qxF 'source /workspaces/ford/.venv/bin/activate' ~/.profile || echo 'source /workspaces/ford/.venv/bin/activate' >> ~/.profile",
	"remoteUser": "vscode",
	"remoteEnv": {
		"PATH": "/workspaces/ford/.venv/bin:${containerEnv:PATH}"
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"username": "vscode",
			"userUid": "1000",
			"userGid": "1000"
		}
	}
}
